{% extends 'base.html.twig' %}

{% block title %}
    Log in!
{% endblock %}

{% block body %}
    <section class="login-dark">
        <form action="{{ path('app_login') }}" method="post">
            <h3 class="text-center">Bejelentkezés</h3>
            <div class="mb-3">
                <input class="form-control" type="text" name="username" id="inputUser" placeholder="Felhasználónév" required>
            </div>
            <div class="mb-3">
                <input class="form-control" type="password" name="password" id="password" placeholder="Jelszó" required>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary d-block w-100" type="submit">Bejelentkezés</button>
            </div>
            <span class="text-center text-danger">{{ resultMessage }}</span>
        </form>
    </section>
{% endblock %}