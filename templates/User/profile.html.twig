{% extends 'index.html.twig' %}
{# @var user \App\Entity\User #}
{% block content %}
    <div class="container">
        <div class="w-100">
            <div class="alert alert-{{ resultColor }} hide" role="alert">
                {{ resultMessage }}
            </div>
            <div class="row">
                <div class="col-lg-4 col-lg-12">
                    <div class="card mb-3" style="background: rgba(255,255,255,0.5);">
                        <div class="card-body text-center shadow" style="background: rgba(255,255,255,0.5);"><img style="border: 1px solid black" class="rounded-circle mb-3 mt-4 profileImgSet" src="assets/img/unknow.jpg" width="160" height="160">
                            <div class="mb-3">
                                <p style="font-weight: bold">{{ user.username }}
                                    {% if is_granted("ROLE_ADMIN")%} (Admin)
                                    {% else %} (Raktáros)
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3">
                <div class="row ">
                    <div class="col col-lg-6 col-sm-12">
                        <div class="card shadow mb-3" style="background: rgba(255,255,255,0.5);">
                            <div class="card-header py-3" >
                                <p class="text-primary m-0 fw-bold">Felhasználói adat módosítás</p>
                            </div>
                            <div class="card-body" style="background: rgba(255,255,255,0.5);color: #1e2833;">
                                <form action="{{ path('updateLoggedUser') }}" method="post">
                                    <div class="row">
                                        <div class="col">
                                            <div class="mb-3">
                                                <label class="form-label" for="username"><strong>Felhasználónév</strong></label>
                                                <input class="form-control" type="text" id="username" value="{{ user.username }}" name="username" maxlength="30">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="mb-3">
                                                <label class="form-label" for="email"><strong>Email cím</strong></label>
                                                <input class="form-control" type="email" id="email" value="{{ user.email }}" name="email" maxlength="255">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="mb-3">
                                                <label class="form-label" for="fullName"><strong>Teljes név</strong><br></label>
                                                <input class="form-control" type="text" id="fullName" value="{{ user.fullName }}" name="fullName" maxlength="100">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="mb-3">
                                                <label class="form-label" for="phoneNumber"><strong>Telefonszám</strong><br></label>
                                                <input class="form-control" type="text" id="phoneNumber" value="{{ user.phoneNumber|replace({'+36': ''}) }}" name="phoneNumber" maxlength="30">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <button class="btn btn-primary btn-sm buttonDesign" type="submit">Módosít</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col col-lg-6 col-sm-12">
                        <div class="card shadow" style="background: rgba(255,255,255,0.5);">
                            <div class="card-header py-3">
                                <p class="text-primary m-0 fw-bold">Jelszó módosítás</p>
                            </div>
                            <div class="card-body" style="background: rgba(255,255,255,0.5);color: #1e2833;">

                                    <form action="{{ path('passChange') }}" method="post">
                                        <div class="row">
                                            <div class="col mb-3">
                                                <label class="form-label" for="oldPass"><strong>&nbsp;Jelenlegi jelszó</strong></label>
                                                <input class="form-control" type="password" id="oldPass" name="oldPass" maxlength="30">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 mb-3">
                                                <label class="form-label" for="newPass1"><strong>Új jelszó</strong></label>
                                                <input class="form-control" type="password" id="newPass1" name="newPass1" maxlength="30">
                                            </div>
                                            <div class="col-6 mb-3">
                                                <label class="form-label" for="newPass2"><strong>Új jelszó (újra)</strong></label>
                                                <input class="form-control" type="password" id="newPass2" name="newPass2" maxlength="30">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <button class="btn btn-primary btn-sm buttonDesign" type="submit">Módosít<br></button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="bg-white sticky-footer" style="background: #1e2833 !important;"></footer>
{% endblock %}