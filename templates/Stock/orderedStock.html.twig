{% extends 'index.html.twig' %}

{# @var stocks \App\Entity\Stock[] #}
{% block content %}
    <div class="container-fluid">
        <h3 class="text-dark mb-4">Megrendelt eszközök<br></h3>
        <div class="alert alert-{{ resultColor }}" role="alert">
            <span class="fw-bold">{{ resultMessage }}</span>
        </div>
        <div class="card shadow" style="background: rgba(255,255,255,0.5);margin-bottom: 5%;">
            <div class="card-header py-3" style="background: rgb(0,50,71);color: rgb(255,255,255);">
                <h5>Szűréshez kövesse a kért utasításokat!<br></h5>
                <div class="row d-flex align-items-center text-center">
                    <form action="{{ path('orderedStock') }}" method="post">
                        <div class="row d-flex align-items-center text-center">
                            <div class="col-3">
                                <select name="brands" id="brands" class="showSelect" onchange="brandChanged()">
                                    <option value="">Válassz márkát!</option>
                                </select>
                            </div>
                            <div class="col-3">
                                <select name="models" id="models" class="showSelect" onchange="modelChanged()"></select>
                            </div>
                            <div class="col-2">
                                <select name="colors" id="colors" class="showSelect" onchange="colorChanged()"></select>
                            </div>
                            <div class="col-2">
                                <select name="capacities" id="capacities" class="showSelect" onchange="capacityChanged()"></select>
                            </div>
                            <div class="col-2">
                                <button id="szures" class="btn buttonDesign w-100">Szűrés</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-body" style="background: rgba(255,255,255,0.5);">
                <div class="row">
                    <div class="col-md-6 text-nowrap">
                        <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable"><label class="form-label">Show&nbsp;<select class="d-inline-block form-select form-select-sm showSelect">
                                    <option value="10" selected="">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>&nbsp;</label></div>
                    </div>
                    <div class="col-md-6">
                        <div class="text-md-end dataTables_filter" id="dataTable_filter">
                            <a href="{{ path('generateOrderedExcel') }}" class="btn btn-primary buttonDesign" type="button">Excel</a>
                            <a href="{{ path('generateOrderedPDF') }}" class="btn btn-primary buttonDesign" type="button">PDF</a>
                            <button class="btn btn-primary buttonDesign" type="button" data-bs-target="#addOrder" data-bs-toggle="modal">Hozzáadás</button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                    <table class="table my-0" id="dataTable">
                        <thead>
                        <tr>
                            <th>Mennyiség</th>
                            <th>Beszerzési ár</th>
                            <th>Telefon</th>
                            <th>Raktár</th>
                            <th>Státusz</th>
                            <th>Dátum</th>
                            <th>Felhasználó</th>
                            <th>Műveletek</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set counter = 0 %}
                        {% for stock in stocks %}
                            {% if stock.statusID.status == "Megrendelve" %}
                                <tr id="{{ counter }}">
                                    <td id="amount{{ counter }}">{{ stock.amount }}</td>
                                    <td id="purchasePrice{{ counter }}">{{ stock.purchasePrice }}</td>
                                    <td>
                                        <span id="brand{{ counter }}">{{ stock.phoneID.brandID.brandName }} </span>
                                        <span id="model{{ counter }}">{{ stock.phoneID.modelID.modelName }} </span>
                                        <span id="color{{ counter }}">{{ stock.phoneID.colorID.phoneColor }} </span>
                                        <span id="capacity{{ counter }}">{{ stock.phoneID.capacityID.capacity }} GB </span>
                                    </td>
                                    <td id="warehouse{{ counter }}">{{ stock.warehouseID.whName }}</td>
                                    <td id="status{{ counter }}">{{ stock.statusID.status }}</td>
                                    <td id="date{{ counter }}">{{ stock.date|date('Y-m-d H:i:s') }}</td>
                                    <td id="user{{ counter }}">{{ stock.userID.username }} ({{ stock.userID.roles[0] }})</td>
                                    <td>
                                        <button id="btn{{ counter }}" class="btn btn-primary buttonDesign" type="button" data-bs-target="#updateOrder" data-bs-toggle="modal" onclick="updateOrder(this.id)"><i class="fas fa-edit operationIcon"></i></button>
                                    </td>
                                </tr>
                            {% endif %}
                            {% set counter = counter + 1 %}
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr></tr>
                        </tfoot>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-6 align-self-center">
                        <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">Showing 1 to 10 of 27</p>
                    </div>
                    <div class="col-md-6">
                        <nav class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <footer class="bg-white sticky-footer" style="background: #1e2833 !important;"></footer>
    </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
    </div>
    <div class="modal fade" role="dialog" tabindex="-1" id="updateOrder">
        <div class="modal-dialog modal-lg modal-fullscreen-lg-down" role="document">
            <div class="modal-content">
                <div class="modal-header modalHeaderFooter">
                    <h5 class="w-100 text-center"><strong>Megrendelt eszköz módosítása</strong><br></h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="{{ path('updateOrderedStock', {"stockId": "id"}) }}">
                    <div class="modal-body modalBody">
                        <div class="card shadow mb-3" style="background: rgba(255,255,255,0.5);">
                            <div class="card-body">
                                    <div class="row">
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="brand"><strong>Márka</strong></label>
                                                <input class="form-control" type="text" id="username" placeholder="user.name" name="username" disabled="">
                                            </div>
                                        </div>
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="email"><strong>Model</strong><br></label>
                                                <input class="form-control" type="email" id="email" placeholder="user@example.com" name="email" disabled="">
                                            </div>
                                        </div>
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="first_name"><strong>Szín</strong><br></label>
                                                <input class="form-control" type="text" id="first_name" placeholder="John" name="first_name" disabled="">
                                            </div>
                                        </div>
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="last_name"><strong>Kapacitás</strong><br></label>
                                                <input class="form-control" type="text" id="last_name" placeholder="Doe" name="last_name" disabled="">
                                            </div>
                                        </div>
                                        <div class="col col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="last_name"><strong>Raktár</strong><br></label>
                                                <input class="form-control" type="text" id="last_name-4" placeholder="Doe" name="last_name" disabled="">
                                            </div>
                                        </div>
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="last_name"><strong>Mennyiség</strong><br></label>
                                                <input class="form-control" type="text" id="last_name-1" placeholder="Doe" name="last_name">
                                            </div>
                                        </div>
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="last_name"><strong>Beszerzési ár</strong><br></label>
                                                <input class="form-control" type="text" id="last_name-2" placeholder="Doe" name="last_name">
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="mb-3"><label class="form-label" for="last_name"><strong>Státusz</strong><br></label>
                                                <select class="form-select orderSelect" name="status" id="status"></select>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer modalHeaderFooter">
                        <button class="btn btn-light modalCloseButton" type="button" data-bs-dismiss="modal">Bezárás</button>
                        <button class="btn btn-primary modalSaveButton" type="submit">Mentés</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class="modal fade" role="dialog" tabindex="-1" id="addOrder">
        <div class="modal-dialog modal-lg modal-fullscreen-lg-down" role="document">
            <div class="modal-content">
                <div class="modal-header modalHeaderFooter">
                    <h5 class="w-100 text-center"><strong>Készülék rendelése</strong></h5><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="{{ path('addStock') }}" method="post">
                    <div class="modal-body modalBody">
                        <div class="card shadow mb-3" style="background: rgba(255,255,255,0.5);">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col col-sm-6 col-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="brandName"><strong>Márka</strong></label>
                                            <input class="form-control" type="text" id="brandName" name="brandName">
                                        </div>
                                    </div>
                                    <div class="col col-sm-6 col-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="modelName"><strong>Model</strong><br></label>
                                            <input class="form-control" type="text" id="modelName" name="modelName">
                                        </div>
                                    </div>
                                    <div class="col col-sm-6 col-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="colorName"><strong>Szín</strong><br></label>
                                            <input class="form-control" type="text" id="colorName" name="colorName">
                                        </div>
                                    </div>
                                    <div class="col col-sm-6 col-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="capacity"><strong>Kapacitás</strong><br></label>
                                            <input class="form-control" type="number" id="capacity" name="capacity">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="warehouse"><strong>Raktár</strong><br></label>
                                        <select name="warehouse" id="warehouse" class="form-select orderSelect">
                                            <option value="">Válassz raktárt!</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="amount"><strong>Mennyiség</strong><br></label>
                                                <input class="form-control" type="number" id="amount" name="amount">
                                            </div>
                                        </div>
                                        <div class="col col-sm-6 col-12">
                                            <div class="mb-3">
                                                <label class="form-label" for="purchase"><strong>Beszerzési ár</strong><br></label>
                                                <input class="form-control" type="text" id="purchase" name="purchase">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer modalHeaderFooter">
                        <button class="btn btn-light modalCloseButton" type="button" data-bs-dismiss="modal">Bezárás</button>
                        <button class="btn btn-primary modalSaveButton" type="submit">Hozzáadás</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <script src="{{ asset('assets/bootstrap/js/jquery.min.js') }}"></script>
    <script>
        $(document).ready(function (){
            $.ajax({
                url: "{{ path('allWarehouse') }}",
                success: function (eredmeny){
                    $.each(eredmeny, function (key,value){
                        var warehouseOption = $('<option>', {value:value.id, text:value.whName});
                        $('#warehouse').append(warehouseOption);
                    });
                }
            });

            $.ajax({
                url: "{{ path('allStatus') }}",
                success: function (eredmeny){
                    console.log(eredmeny);
                    $.each(eredmeny, function (key,value){
                        var statusOption = $('<option>',{ value: value.id, text: value.status});
                        $("#status").append(statusOption);
                    });
                }
            });

            $("#models").hide();
            $("#colors").hide();
            $("#capacities").hide();
            $("#szures").hide();

            $.ajax({
                url: "{{ path('allOrderedBrand') }}",
                success: function (result){
                    $.each(result, function (key,value){
                        var brandOption = $('<option>', {value:value.phoneID.brandID.id, text:value.phoneID.brandID.brandName});
                        $("#brands").append(brandOption);
                    });
                }
            });
        });
        function updateOrder(rowId){

        }
        function brandChanged(){
            $("#models").show();
            $("#colors").hide();
            $("#capacities").hide();
            $("#szures").hide();
            $.ajax({
                url: "{{ path('allOrderedModel') }}",
                method: "post",
                data:{
                    "brandID":document.getElementById("brands").value
                },
                success: function (result){
                    $("#models").find("option").remove();
                    var defaultVal = $('<option>', {value:"", text:"Válassz modelt"});
                    $("#models").append(defaultVal);
                    $.each(result, function (key,value){
                        var modelOption = $('<option>', {value:value.phoneID.modelID.id, text:value.phoneID.modelID.modelName});
                        $("#models").append(modelOption);
                    });
                }

            });
        }
        function modelChanged(){
            $("#colors").show();
            $("#capacities").hide();
            $("#szures").hide();
            $.ajax({
                url: "{{ path('allOrderedColor') }}",
                method: "post",
                data:{
                    "modelID":document.getElementById("models").value
                },
                success: function (result){
                    console.log(result);
                    $("#colors").find("option").remove();
                    var defaultVal = $('<option>', {value:"", text:"Válassz színt"});
                    $("#colors").append(defaultVal);
                    $.each(result, function (key,value){
                        var colorOption = $('<option>', {value:value.phoneID.colorID.id, text:value.phoneID.colorID.phoneColor});
                        $("#colors").append(colorOption);
                    });
                }

            });
        }
        function colorChanged(){
            $("#capacities").show();
            $("#szures").hide();
            $.ajax({
                url: "{{ path('allOrderedCapacity') }}",
                method: "post",
                data:{
                    "colorID":document.getElementById("colors").value
                },
                success: function (result){
                    $("#capacities").find("option").remove();
                    var defaultVal = $('<option>', {value:"", text:"Válassz méretet!"});
                    $("#capacities").append(defaultVal);
                    $.each(result, function (key,value){
                        var capacityOption = $('<option>', {value:value.phoneID.capacityID.id, text:value.phoneID.capacityID.capacity});
                        $("#capacities").append(capacityOption);
                    });
                }

            });
        }
        function capacityChanged(){
            $("#szures").show();
        }
    </script>
{% endblock %}