{% extends 'main.html.twig' %}

{# @var stocks App\Entity\Stock[] #}
{% block content %}
    <form action="">
        <select name="clients" id="clients" onchange="clientsChanged()">
            <option value="">Válassz ügyfelet!</option>
        </select>
        <select name="contacts" id="contacts">
            <option value="">Válassz kontaktot</option>
        </select>
        <button id="eladas">Feladás</button>
    </form>
    <div id="ordering">
        <div id="clientInformations">
            <p>Itt megjelenik az ügyfélnek minden adata! + a kontakté</p>
        </div>
        <div id=tempTable">
            <table border="1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Darab</th>
                        <th>Beszerzési ár</th>
                        <th>Raktár</th>
                        <th>Márka</th>
                        <th>Model</th>
                        <th>Szín</th>
                        <th>Kapacitás</th>
                        <th>Státusz</th>
                        <th>Dátum</th>
                        <th>Hozzáadás</th>
                    </tr>
                </thead>
                <tbody>
                {% set counter = 0 %}
                    {% for stock in stocks %}
                        {% if stock.statusID.status == "Beérkezett" %}
                            <tr id="{{ counter }}">
                                <td id="id{{ counter }}">{{ stock.id }}</td>
                                <td id="amount{{ counter }}">{{ stock.amount }}</td>
                                <td id="purchasePrice{{ counter }}">{{ stock.purchasePrice }}</td>
                                <td id="whName{{ counter }}">{{ stock.warehouseID.whName }}</td>
                                <td id="brandName{{ counter }}">{{ stock.phoneID.brandID.brandName }}</td>
                                <td id="modelName{{ counter }}">{{ stock.phoneID.modelID.modelName }}</td>
                                <td id="phoneColor{{ counter }}">{{ stock.phoneID.colorID.phoneColor }}</td>
                                <td id="capacity{{ counter }}">{{ stock.phoneID.capacityId.capacity }}</td>
                                <td id="status{{ counter }}">{{ stock.statusID.status }}</td>
                                <td id="date{{ counter }}">{{ stock.date|date('Y-m-d H:i:s') }}</td>
                                <td>
                                    <button type="button" class="btn btn-light" id="btn{{ counter }}" onclick="makeOrder(this.id)">+</button>
                                </td>
                            </tr>
                            {% set counter = counter + 1 %}
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
            <div id="sellingTable">
                <table border="1">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Darab</th>
                        <th>Beszerzési ár</th>
                        <th>Raktár</th>
                        <th>Márka</th>
                        <th>Model</th>
                        <th>Szín</th>
                        <th>Kapacitás</th>
                        <th>Státusz</th>
                        <th>Dátum</th>
                        <th>Törlés</th>
                    </tr>
                    </thead>
                    <tbody id="sellingTableBody">

                    </tbody>
                </table>
            </div>
    </div>
    <div class="modal"  tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="modal" id="orderingModal" role="dialog" >
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content bg-secondary">
                    <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form class="row g-3">
                            <div class="col-12">
                                <label for="numberofdevice" class="form-label">Quantity (max: <span id="maxAmount"></span>)</label>
                                <input type="number" class="form-control" id="numberofdevice">
                            </div>
                            <div class="col-12">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" class="form-control" id="price">
                            </div>
                            <div class="col-12">
                                <label for="pendingComment" class="form-label">Comment</label>
                                <textarea class="form-control" id="pendingComment" name="pendingComment" placeholder="Comment" rows="3" ></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary close" data-dismiss="modal">Close</button>
                        <button type="button" onclick="addToList()" class="btn btn-primary">Add Device</button>
                    </div>
                </div>
            </div>
    </div>


    <script>
        var id= "";
        var maxAmount = 0;
        var purchasePrice = 0;
        function getTdById(id, type){
            return document.getElementById(type+id).innerHTML;
        }
        function setTdById(id, type, value){
            return document.getElementById(type+id).innerHTML = value;
        }

        function makeOrder(rowId){
            rowId = rowId.replace("btn", "");
            console.log(rowId);
            id = rowId;
            maxAmount = document.getElementById("amount"+rowId).innerHTML;
            purchasePrice = document.getElementById("purchasePrice"+rowId).innerHTML;
            document.getElementById("maxAmount").innerHTML = maxAmount;
            document.getElementById("price").value = purchasePrice;
            $("#orderingModal").show();
        }
        function addToList(){
            var amount = document.getElementById("numberofdevice").value;
            var salePrice = document.getElementById("price").value;
            var comment = document.getElementById("pendingComment").value;

            if (parseFloat(maxAmount) < parseFloat(amount)){
                alert("Not enough amount in the stock")
            }else{
                var sellTable = document.getElementById("sellingTableBody");
                var ID = 0;
                var inSell = false;
                for (let i in sellTable.rows){
                    let row = sellTable.rows[i];
                    if(row.id != null && row.id !==""){
                        ID = row.id;
                        if(ID === id){
                            inSell = true;
                        }
                    }
                }
                if(inSell){
                    var tempAmount = parseFloat(getTdById(ID, "sellAmount")) + parseFloat(amount);
                    setTdById(ID, "sellAmount", tempAmount);
                }else{
                    var row = sellTable.insertRow();

                    var cell1 = row.insertCell(0);
                    var cell2 = row.insertCell(1);
                    var cell3 = row.insertCell(2);
                    var cell4 = row.insertCell(3);
                    var cell5 = row.insertCell(4);
                    var cell6 = row.insertCell(5);
                    var cell7 = row.insertCell(6);
                    var cell8 = row.insertCell(7);
                    var cell9 = row.insertCell(8);
                    var cell10 = row.insertCell(9);
                    var cell11 = row.insertCell(10);

                    cell1.innerHTML = getTdById(id, "id");
                    cell1.id = "sellId"+id;
                    cell2.innerHTML = getTdById(id, "amount");
                    cell2.id = "sellAmount"+id;
                    cell3.innerHTML = getTdById(id, "purchasePrice");
                    cell3.id = "sellPrice"+id;
                    cell4.innerHTML = getTdById(id, "whName");
                    cell4.id = "sellWhName"+id;
                    cell5.innerHTML = getTdById(id, "brandName");
                    cell5.id = "sellBrand"+id;
                    cell6.innerHTML = getTdById(id, "modelName");
                    cell6.id = "sellModel"+id;
                    cell7.innerHTML = getTdById(id, "phoneColor");
                    cell7.id = "sellColor"+id;
                    cell8.innerHTML = getTdById(id, "capacity");
                    cell8.id = "sellCapacity"+id;
                    cell9.innerHTML = getTdById(id, "status");
                    cell9.id = "sellStatus"+id;
                    cell10.innerHTML = getTdById(id, "date");
                    cell10.id = "sellDate"+id;
                    cell11.innerHTML = "törlés";

                }
                inSell = false;
                setTdById(id,"amount", getTdById(id, "amount")-amount);
                $("#orderingModal").hide();
                document.getElementById("numberofdevice").value = "";
                document.getElementById("price").value = "";
            }




        }
    </script>


{% endblock %}